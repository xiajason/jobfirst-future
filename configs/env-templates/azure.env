# Azure环境配置模板
# 部署到Azure时使用

# 服务器信息
CLOUD_PROVIDER=azure
SERVER_IP=azure-vm-ip

# 数据库配置（Azure Database for MySQL）
DB_HOST=jobfirst.mysql.database.azure.com
DB_PORT=3306
DB_USER=jobfirst_admin@jobfirst
DB_PASSWORD=Azure_SecurePassword_2025
DB_NAME=jobfirst_azure

# Redis配置（Azure Cache for Redis）
REDIS_HOST=jobfirst-redis.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=Azure_Redis_Password_2025
REDIS_SSL=true

# PostgreSQL配置（Azure Database for PostgreSQL）
POSTGRES_HOST=jobfirst-pg.postgres.database.azure.com
POSTGRES_PORT=5432
POSTGRES_USER=postgres@jobfirst-pg
POSTGRES_PASSWORD=Azure_PG_Password_2025
POSTGRES_DB=jobfirst_azure

# MongoDB配置（Azure Cosmos DB）
MONGODB_HOST=jobfirst-cosmos.mongo.cosmos.azure.com
MONGODB_PORT=10255
MONGODB_USER=jobfirst-cosmos
MONGODB_PASSWORD=Azure_Cosmos_Password_2025
MONGODB_DB=jobfirst_azure
MONGODB_SSL=true

# JWT配置（跨云统一）
JWT_SECRET=jobfirst-unified-auth-secret-key-2024

# MinerU服务地址
MINERU_SERVICE_URL=http://azure-mineru-service:8621

# 天翼云认证中心（跨云调用）
AUTH_CENTER_URL=http://101.33.251.158:8207

# 服务端口配置
USER_SERVICE_PORT=8081
RESUME_SERVICE_PORT=8082
JOB_SERVICE_PORT=8083
BANNER_SERVICE_PORT=8084
TEMPLATE_SERVICE_PORT=8085
STATISTICS_SERVICE_PORT=8086
NOTIFICATION_SERVICE_PORT=8087
COMPANY_SERVICE_PORT=8088
DEV_TEAM_SERVICE_PORT=8089
API_GATEWAY_PORT=8601

# Azure特定配置
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=jobfirst-rg
AZURE_BLOB_CONTAINER=jobfirst-files

